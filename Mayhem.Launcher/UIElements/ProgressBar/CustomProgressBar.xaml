<UserControl x:Class="Mayhem.Launcher.UIElements.ProgressBar.CustomProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mayhem.Launcher.UIElements.ProgressBar"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="100">
    <Viewbox Stretch="Fill" UseLayoutRounding="True">
        <Grid x:Name="pggrid" Width="100" Height="10">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Transparent" Offset="0.75"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Rectangle x:Name="pgc" Width="0" Height="10" HorizontalAlignment="Left" Margin="1,2,1,2">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#F2F2F2" Offset="0"></GradientStop>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </Viewbox>
</UserControl>
